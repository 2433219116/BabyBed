<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:padding="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_community_tittle"
            style="@style/text_normal"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="孩子总是发烧咳嗽，大多数的家长以为没事，多半是肺部问题"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_community_category"
                    style="@style/text_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorViolet"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="专栏"
                    android:textColor="@color/colorWhite"/>

                <TextView
                    android:id="@+id/txt_community_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="2018-01-10"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="60dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/hot"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/ic_community_relist_host"/>

                <TextView
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:id="@+id/txt_community_number"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="2000"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:scaleType="centerCrop"
        android:id="@+id/img_community_imgurl"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/img_portrait"/>
</LinearLayout>