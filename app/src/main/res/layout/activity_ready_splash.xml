<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="240dp"
            android:layout_height="180dp"
            android:src="@mipmap/img_splash"/>

        <TextView
            style="@style/text_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="BABY BED"/>

        <TextView
            android:layout_marginBottom="40dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="科技改变生活，儿童幸福成长，我们愿做一方土壤，为您的孩子保驾护航"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_splash_skip"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_circle_white"
            android:text="skip"
            android:textColor="@color/colorViolet"/>

        <Button
            android:id="@+id/btn_splash_login"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_circle_violet"
            android:text="login"
            android:textColor="@color/colorWhite"/>
    </LinearLayout>

</RelativeLayout>
