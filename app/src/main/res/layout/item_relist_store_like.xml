<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <LinearLayout
            android:padding="10dp"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:scaleType="centerCrop"
                    android:id="@+id/img_store_like"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/img_portrait"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@id/img_store_like"
                    android:src="@mipmap/ic_heart_null"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/txt_store_like_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全新儿童卫衣"/>

            <TextView
                android:id="@+id/txt_store_like_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥45.00"
                android:textColor="@color/colorViolet"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>