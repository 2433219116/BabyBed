<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="100dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_bed_bluetooth"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_bluetooth_bed"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_bed_bluetooth_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备名称"/>
        <TextView
            android:id="@+id/txt_bed_bluetooth_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址信息"/>
        <TextView
            android:id="@+id/txt_bed_bluetooth_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="状态信息"/>
    </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/ic_circle_forward"/>
</RelativeLayout>